<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarTextAppearance">
        <item name="android:textSize">@dimen/font_xmedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>

    <style name="Toolbar">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="TextMessageContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/space_xxsmall</item>
        <item name="android:paddingBottom">@dimen/space_small</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="TextMessageSender">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/space_xxsmall</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">@dimen/space_small</item>
        <item name="android:textColor">?colorOnSurfaceVariant</item>
        <item name="android:textSize">@dimen/font_xxxsmall</item>
    </style>

    <style name="CardMessageContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/space_xxsmall</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">42dp</item>
    </style>
</resources>